@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4 animate-fade-in">
                    Welcome to ProductStore
                </h1>
                <p class="lead mb-4 animate-fade-in-delay">
                    Discover amazing products at unbeatable prices. Shop with confidence and enjoy fast, reliable delivery.
                </p>
                <div class="animate-fade-in-delay-2">
                    <a href="@Url.Action("Index", "Products")" class="btn btn-light btn-lg me-3">
                        <i class="fas fa-shopping-bag me-2"></i>Shop Now
                    </a>
                    <a href="#features" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-info-circle me-2"></i>Learn More
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image animate-float">
                    <i class="fas fa-store display-1 text-white-50"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Why Choose Us?</h2>
            <p class="lead text-muted">Experience the best online shopping with our premium features</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card h-100 p-4 text-center">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-search fa-3x text-primary"></i>
                    </div>
                    <h4>Smart Search</h4>
                    <p class="text-muted">Find exactly what you're looking for with our intelligent search and filtering system.</p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card h-100 p-4 text-center">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shopping-cart fa-3x text-success"></i>
                    </div>
                    <h4>Easy Shopping</h4>
                    <p class="text-muted">Streamlined shopping experience with quick add-to-cart and seamless checkout process.</p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card h-100 p-4 text-center">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-mobile-alt fa-3x text-info"></i>
                    </div>
                    <h4>Mobile Friendly</h4>
                    <p class="text-muted">Fully responsive design that works perfectly on all devices, from mobile to desktop.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="bg-light py-5">
    <div class="container text-center">
        <h2 class="mb-4">Ready to Start Shopping?</h2>
        <p class="lead mb-4">Browse our extensive collection of quality products</p>
        <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg">
            <i class="fas fa-arrow-right me-2"></i>View Products
        </a>
    </div>
</section>

<!-- Statistics Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-primary">500+</h3>
                    <p class="text-muted">Products Available</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-success">10K+</h3>
                    <p class="text-muted">Happy Customers</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-info">24/7</h3>
                    <p class="text-muted">Customer Support</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-warning">4.8★</h3>
                    <p class="text-muted">Average Rating</p>
                </div>
            </div>
        </div>
    </div>
</section>